rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload files to their own folder
    match /uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow counsellors to upload resource files
    match /resources/{allPaths=**} {
      allow read: if true; // Public read access for resources
      allow write: if request.auth != null && 
        (request.auth.token.role == 'counsellor' || request.auth.token.role == 'admin');
    }
    
    // Allow profile image uploads
    match /profile-images/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow report file uploads for counsellors
    match /reports/{allPaths=**} {
      allow read: if request.auth != null && 
        (request.auth.token.role == 'counsellor' || request.auth.token.role == 'admin');
      allow write: if request.auth != null && 
        (request.auth.token.role == 'counsellor' || request.auth.token.role == 'admin');
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
